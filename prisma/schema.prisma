generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  userId    Int      @id @default(autoincrement())
  DNI       String   
  nombres   String
  email     String   
  telefono  String   
  password  String
  status    Boolean  
  rol       String   
  isDeleted Int      
  createdAt DateTime 
  updatedAt DateTime

  @@map("users")
}


model Group {
  groupId           Int       @id @default(autoincrement())
  nombre            String
  color             String    
  empresa_Group     Empresa_Group[]

  status            Boolean  
  isDeleted         Int      
  createdAt         DateTime 
  updatedAt         DateTime
  
  @@map("groups")
}

model Empresa {
  empresaId         Int     @id @default(autoincrement())
  nombre            String
  logo              String
  precioPorKilo     Float
  empresa_Group     Empresa_Group[]

  status            Boolean  
  isDeleted         Int      
  createdAt         DateTime 
  updatedAt         DateTime

  @@map("empresas")
}

model Empresa_Group{
  empresaGroupId    Int     @id @default(autoincrement())
  groupId           Int 
  empresaId         Int

  group             Group   @relation(fields: [groupId], references: [groupId])
  empresa           Empresa @relation(fields: [empresaId], references: [empresaId])

  status            Boolean  
  isDeleted         Int      
  createdAt         DateTime 
  updatedAt         DateTime

  @@index([empresaId, groupId])
  @@map("empresas_groups")
}
